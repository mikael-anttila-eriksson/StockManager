@model Stock_Manager.ViewModel.AccountsViewModel

@{
    ViewData["Title"] = "UpdateAccount";
}
@section Metatags
    {
    <meta name="DC.title" content="Update account" />
    <meta name="DC.description" content="Edit information about specific account" />
    <meta name="DC.identifier" content="https://localhost:7132/Account/UpdateAccount" />
}

<h1>UpdateAccount</h1>

<h4>Account: @Model.AccountId</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="UpdateAccount">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <label asp-for="Saldo" text class="control-label">Current Saldo</label>
                <input asp-for="Saldo" class="form-control" placeholder="@Model.Saldo"/>
                <span asp-validation-for="Saldo" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
        <a asp-controller="MyEconomy" asp-action="Overview">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
